@model InfiniteTiers.DevicesStore.Data.Models.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-primary">
    <a asp-action="Index" class="float-left text-dark"><i class="fas fa-long-arrow-alt-left"></i></a>
    Delete @Model.Name
</h1>

<hr />

<div class="row">
    <div class="col-lg-6">
        <h3>Are you sure you want to delete this?</h3>
        <h5 class="text-danger">Caution: @Model.Devices.Count Devices would be deleted!</h5>
    </div>
    <dl class="col-lg-6">
        <div class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </div>
    </dl>

    <div class="col-lg-6 offset-lg-6">
        <form asp-action="Delete">
            <input type="hidden" asp-for="CategoryId" />
            <input type="submit" value="Delete" class="btn btn-danger btn-block" /> 
        </form>
    </div>

</div>
